{
  "name": "bluetooth",
  "description": "Bluetooth operations",
  "icon": "antenna.radiowaves.left.and.right",
  "color": "blue",
  "daemonSupport": "limited",
  "daemonNote": "The 'openSettings' method requires UI interaction; scanning may require the app to be in the foreground.",
  "methods": [
    {
      "name": "isEnabled",
      "signature": "isEnabled()",
      "description": "Check if Bluetooth is enabled",
      "returns": "boolean"
    },
    {
      "name": "getStatus",
      "signature": "getStatus()",
      "description": "Get current Bluetooth adapter state",
      "returns": "'poweredOn' | 'poweredOff' | 'unauthorized' | 'unknown'"
    },
    {
      "name": "setEnabled",
      "signature": "setEnabled(enabled)",
      "description": "Set Bluetooth power state",
      "parameters": [
        {
          "name": "enabled",
          "type": "boolean",
          "description": "Whether to enable Bluetooth"
        }
      ],
      "returns": "void",
      "returnsDescription": "No return value"
    },
    {
      "name": "turnOn",
      "signature": "turnOn()",
      "description": "Turn on Bluetooth",
      "returns": "void",
      "returnsDescription": "No return value"
    },
    {
      "name": "turnOff",
      "signature": "turnOff()",
      "description": "Turn off Bluetooth",
      "returns": "void",
      "returnsDescription": "No return value"
    },
    {
      "name": "getPairedDevices",
      "signature": "getPairedDevices()",
      "description": "Get a list of paired devices",
      "returns": "Promise<[{ name: string, uuid: string, isConnected: boolean }]>"
    },
    {
      "name": "getConnectedDevices",
      "signature": "getConnectedDevices()",
      "description": "Get a list of currently connected devices",
      "returns": "Promise<[{ name: string, uuid: string }]>"
    },
    {
      "name": "connectDevice",
      "signature": "connectDevice(id)",
      "description": "Connect to a specific device",
      "parameters": [
        {
          "name": "id",
          "type": "string",
          "description": "Device UUID"
        }
      ],
      "returns": "Promise<boolean>"
    },
    {
      "name": "disconnectDevice",
      "signature": "disconnectDevice(id)",
      "description": "Disconnect from a specific device",
      "parameters": [
        {
          "name": "id",
          "type": "string",
          "description": "Device UUID"
        }
      ],
      "returns": "Promise<boolean>"
    },
    {
      "name": "startScan",
      "signature": "startScan()",
      "description": "Start scanning for nearby Bluetooth devices",
      "returns": "void",
      "returnsDescription": "No return value"
    },
    {
      "name": "stopScan",
      "signature": "stopScan()",
      "description": "Stop the ongoing Bluetooth scan",
      "returns": "void",
      "returnsDescription": "No return value"
    },
    {
      "name": "openSettings",
      "signature": "openSettings()",
      "description": "Open system Bluetooth settings",
      "daemonSupport": "none",
      "returns": "void",
      "returnsDescription": "No return value"
    }
  ]
}