{
  "name": "alarm",
  "description": "闹钟和定时提醒",
  "icon": "alarm",
  "color": "orange",
  "daemonSupport": "limited",
  "daemonNote": "requestAccess 和打开系统应用的方法需要 UI 交互",
  "methods": [
    {
      "name": "requestAccess",
      "signature": "requestAccess()",
      "description": "请求通知权限",
      "daemonSupport": "none",
      "returns": "Promise<boolean>",
      "returnsDescription": "是否授权成功"
    },
    {
      "name": "getAccessStatus",
      "signature": "getAccessStatus()",
      "description": "获取权限状态",
      "returns": "Promise<'authorized' | 'denied' | 'notDetermined'>",
      "returnsDescription": "权限状态"
    },
    {
      "name": "createOnce",
      "signature": "createOnce(timestamp, title, options?)",
      "description": "创建一次性闹钟",
      "parameters": [
        {
          "name": "timestamp",
          "type": "number",
          "description": "触发时间戳"
        },
        {
          "name": "title",
          "type": "string",
          "description": "标题"
        },
        {
          "name": "options",
          "type": "object",
          "optional": true,
          "description": "选项 { sound }"
        }
      ],
      "returns": "Promise<string>",
      "returnsDescription": "创建的闹钟 ID"
    },
    {
      "name": "createDaily",
      "signature": "createDaily(hour, minute, title, options?)",
      "description": "创建每日重复闹钟",
      "parameters": [
        {
          "name": "hour",
          "type": "number",
          "description": "小时 (0-23)"
        },
        {
          "name": "minute",
          "type": "number",
          "description": "分钟 (0-59)"
        },
        {
          "name": "title",
          "type": "string",
          "description": "标题"
        },
        {
          "name": "options",
          "type": "object",
          "optional": true,
          "description": "选项 { sound }"
        }
      ],
      "returns": "Promise<string>",
      "returnsDescription": "创建的闹钟 ID"
    },
    {
      "name": "createWeekly",
      "signature": "createWeekly(weekday, hour, minute, title, options?)",
      "description": "创建每周重复闹钟",
      "parameters": [
        {
          "name": "weekday",
          "type": "number",
          "description": "周几 (1-7, 周日为1)"
        },
        {
          "name": "hour",
          "type": "number",
          "description": "小时 (0-23)"
        },
        {
          "name": "minute",
          "type": "number",
          "description": "分钟 (0-59)"
        },
        {
          "name": "title",
          "type": "string",
          "description": "标题"
        },
        {
          "name": "options",
          "type": "object",
          "optional": true,
          "description": "选项 { sound }"
        }
      ],
      "returns": "Promise<string>",
      "returnsDescription": "创建的闹钟 ID"
    },
    {
      "name": "createCountdown",
      "signature": "createCountdown(seconds, title, options?)",
      "description": "创建倒计时提醒",
      "parameters": [
        {
          "name": "seconds",
          "type": "number",
          "description": "秒数"
        },
        {
          "name": "title",
          "type": "string",
          "description": "标题"
        },
        {
          "name": "options",
          "type": "object",
          "optional": true,
          "description": "选项 { sound }"
        }
      ],
      "returns": "Promise<string>",
      "returnsDescription": "创建的闹钟 ID"
    },
    {
      "name": "getPending",
      "signature": "getPending()",
      "description": "获取待触发的闹钟",
      "returns": "Promise<[{ id: string, title: string, date: number, repeat?: string }]>",
      "returnsDescription": "待触发闹钟列表"
    },
    {
      "name": "getCount",
      "signature": "getCount()",
      "description": "获取闹钟数量",
      "returns": "Promise<number>",
      "returnsDescription": "闹钟数量"
    },
    {
      "name": "cancel",
      "signature": "cancel(id)",
      "description": "取消指定闹钟",
      "parameters": [
        {
          "name": "id",
          "type": "string",
          "description": "闹钟 ID"
        }
      ],
      "returns": "void"
    },
    {
      "name": "cancelAll",
      "signature": "cancelAll()",
      "description": "取消所有闹钟",
      "returns": "void"
    },
    {
      "name": "openClockApp",
      "signature": "openClockApp()",
      "description": "打开系统时钟",
      "daemonSupport": "none",
      "returns": "void"
    },
    {
      "name": "openTimer",
      "signature": "openTimer()",
      "description": "打开计时器",
      "daemonSupport": "none",
      "returns": "void"
    }
  ]
}
